<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.activity.TestActivity">


    <com.yongf.android.contactsapp.widget.RoundedProgressView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:innerCircleColor="@color/app_colorPrimary"
        app:innerCircleRadius="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progress="10"
        app:progressBg="@color/app_colorAccent"
        app:progressColor="@color/design_default_color_primary"
        app:progressWidth="20dp"
        app:startAngle="-90"
        app:text="我的世界"
        app:textColor="@android:color/holo_red_light"
        app:textSize="12sp" />
</android.support.constraint.ConstraintLayout>